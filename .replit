modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["ffmpeg-full", "freetype", "glibcLocales", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Orchestrator"

[[workflows.workflow]]
name = "Orchestrator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python orchestrator.py"

[deployment]
run = ["sh", "-c", "python orchestrator.py"]
